{
  "StartAt": "GET CircuitStatus",
  "States": {
    "GET CircuitStatus": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:getItem",
      "Parameters": {
        "TableName": "circuit-breaker-info",
        "Key": {
          "contractId": {
            "S": "241dcb89-0d7f-4cad-8b10-693a7a4ce523"
          }
        }
      },
      "Next": "Is Circuit Closed"
    },
    "Is Circuit Closed": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.Item.circuitStatus.S",
          "StringEquals": "OPEN",
          "Next": "Circuit Opened"
        },
        {
          "Variable": "$.Item.circuitStatus.S",
          "StringEquals": "CLOSED",
          "Next": "Create contract"
        }
      ]
    },
    "Circuit Opened": {
      "Type": "Fail"
    },
    "Create contract": {
      "Next": "Circuit Closed",
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:730335531401:function:sf-execute-lambda"
      },
      "Comment": "Task to execute lambda. This will set circuit status to OPEN if the execution fails for three times or the task times out",
      "TimeoutSeconds": 12,
      "Catch": [
        {
          "ErrorEquals": [
            "States.TaskFailed",
            "States.Timeout"
          ],
          "Next": "UPDATE CircuitStatus",
          "ResultPath": "$.taskresult"
        }
      ],
      "OutputPath": "$.Payload.contractId",
      "Retry": [
        {
          "ErrorEquals": [
            "States.TaskFailed",
            "States.Timeout"
          ],
          "BackoffRate": 1,
          "IntervalSeconds": 2,
          "MaxAttempts": 2,
          "JitterStrategy": "FULL"
        }
      ]
    },
    "UPDATE CircuitStatus": {
      "Type": "Task",
      "Resource": "arn:aws:states:::dynamodb:updateItem",
      "Parameters": {
        "TableName": "circuit-breaker-info",
        "Key": {
          "contractId": {
            "S": "241dcb89-0d7f-4cad-8b10-693a7a4ce523"
          }
        },
        "UpdateExpression": "SET circuitStatus = :myValueRef",
        "ExpressionAttributeValues": {
          ":myValueRef": {
            "S": "OPEN"
          }
        }
      },
      "Next": "Circuit Opened"
    },
    "Circuit Closed": {
      "Type": "Succeed"
    }
  }
}